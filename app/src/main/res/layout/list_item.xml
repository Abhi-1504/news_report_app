<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Testing if a long title of news returned in the response" />

    <TextView
        android:id="@+id/section"
        style="@style/section_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/small_text_color"
        tools:text="section" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/author"
            style="@style/author_style"
            android:layout_width="@dimen/zero_height"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/small_text_color"
            tools:text="Test Author" />

        <TextView
            android:id="@+id/date"
            style="@style/date_style"
            android:layout_width="@dimen/zero_height"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/small_text_color"
            tools:text="Test date" />
    </LinearLayout>

</LinearLayout>